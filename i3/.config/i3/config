# Dylan's i3 Config.


set $mod Mod1

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8


set $mod Mod4
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# }}}


# KEYBINDS {{{

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s floating toggle
bindsym $mod+c move position center
bindsym $mod+e sticky toggle
bindsym $mod+b border pixel 5
bindsym $mod+n border normal 0

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6

bindsym $mod+Return exec urxvtc
bindsym $mod+q kill
bindsym $mod+d exec rof
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+p exec scr

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
 bar {
     height 25
 }

# Add a 5px border to all windows.
for_window [class="^.*"] border normal 0

# Float all windows by default.
#for_window [class="^.*"] floating enable

smart_borders on
gaps inner 60
gaps outer 100

workspace 1 output DVI-I-0
workspace 2 output DVI-I-0
workspace 3 output DVI-I-0
workspace 4 output DVI-I-0
workspace 5 output DVI-I-0
workspace 6 output DVI-I-0
workspace 7 output DVI-I-0
workspace 8 output DVI-I-0
workspace 9 output HDMI-A-0

# Toggle sticky windows
bindsym $mod+e sticky toggle

# Title bars with padding.
# We first set the titlebar font size to a larger font size than desired
# to get a good padding amount. We then use pango markup to force i3 to
# print the desired font size. This gives us large titlebars with a small
# font.
font pango:lemon 20
for_window [class=".*"] title_format "<span font='Artwiz Lemon 7'> > %title</span>"

# Media Keys

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id "vol up &"
bindsym XF86AudioLowerVolume exec --no-startup-id "vol down &"
bindsym XF86AudioMute exec --no-startup-id "vol mute &"

# Media player controls
bindsym XF86AudioPlay exec "song toggle"
bindsym XF86AudioNext exec "song next"
bindsym XF86AudioPrev exec "song prev"

# Cycle wallpapers
bindsym $mod+w exec "wal -i ${HOME}/Pictures/Wallpapers -o wal-set"


# Cycle wallpapers
bindsym $mod+w exec "wal -i $HOME/Pictures/Wallpapers -o wal-set"
exec wal -i "$(< "${HOME}/Pictures/Wallpapers")" -o "wal-set"

# exec /usr/bin/compton --config $HOME/.compton.conf
exec --no-startup-id redshift
exec --no-startup-id dunst
